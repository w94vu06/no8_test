<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/img_bd"
        android:layout_width="392dp"
        android:layout_height="201dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/msg_bd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="314dp"
        android:layout_height="125dp"
        android:text="這裡的氣氛很像我小時候的家 感覺像回到了從前，路邊的農田 街坊的歡笑聲 一切都像是回到了無憂無慮的童年呢。"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_bd"
        app:layout_constraintEnd_toEndOf="@+id/img_bd"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/img_bd"
        app:layout_constraintTop_toTopOf="@+id/img_bd"
        app:layout_constraintVertical_bias="0.411" />

    <ImageView
        android:id="@+id/img_like"
        android:layout_width="32dp"
        android:layout_height="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="@+id/img_bd"
        app:layout_constraintStart_toStartOf="@+id/img_bd" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_like"
        app:layout_constraintStart_toEndOf="@+id/img_like"
        app:layout_constraintTop_toTopOf="@+id/img_like"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>